<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bkg_img_default"
    android:gravity="center"
    android:orientation="vertical" >

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >

		<TextView
		    android:id="@+id/user_id"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:gravity="right"
		    android:text="@string/notLogin"
		    android:textSize="20sp" />
		<TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	         />
	
	    <TextView
	        android:id="@+id/logout_id"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="left"
	        android:textColor="@color/black"
	        android:text="@string/logout_text"
	        android:textSize="20sp" />
	    
	</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <com.ljp.ani.MyImageView
            android:id="@+id/busline"
            android:layout_width="wrap_content"	 android:scaleType="matrix"
            android:layout_height="wrap_content"	android:layout_margin="2dp"	
            android:src="@drawable/gongjiao" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.ljp.ani.MyImageView
                    android:id="@+id/station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:scaleType="matrix"
                    android:src="@drawable/zhandain" />

               <com.ljp.ani.MyImageView
                    android:id="@+id/around"
                    android:layout_width="wrap_content"	 android:scaleType="matrix"
                    android:layout_height="wrap_content"	android:layout_margin="2dp"	
                    android:src="@drawable/zhoubian" />
            </LinearLayout>
            <com.ljp.ani.MyImageView
                 android:id="@+id/weather"
                android:layout_width="wrap_content"	 android:scaleType="matrix"
                android:layout_height="wrap_content"	android:layout_margin="2dp"	
                android:src="@drawable/tianqi" />
        </LinearLayout>
       <com.ljp.ani.MyImageView
            android:id="@+id/route"
            android:layout_width="wrap_content"	 android:scaleType="matrix"
            android:layout_height="wrap_content"	android:layout_margin="2dp"	
            android:src="@drawable/luxian" />
       
    </LinearLayout>

</LinearLayout>